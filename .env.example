# Application Environment
NODE_ENV=development # Change to 'production' for deployment

# Security
SESSION_SECRET=your_session_secret_here # Required - generate a strong random string

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/kitcho_family # Required PostgreSQL connection string

# Server Configuration
PORT=5000 # Optional - Railway will typically override this in production

# Admin Account (Only used on first run)
ADMIN_USERNAME=admin # Optional - only for setup
ADMIN_PASSWORD=admin123 # Optional - only for setup

# Logging
LOG_LEVEL=info # Optional: 'error', 'warn', 'info', 'debug'

# Backup Configuration
# These would typically be configured through the admin interface
# BACKUP_DIR=./backups
# BACKUP_FREQUENCY=0 0 * * * # Daily at midnight
# MAX_BACKUPS=7
# BACKUP_EMAIL=admin@example.com